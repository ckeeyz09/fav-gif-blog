<div class="col-sm-4 col-sm-offset-4">
  <legend>Create a new user!</legend>
  <%= form_for @user do |f| %>
    <%= f.label :name %>:
     <%= f.text_field :name, class:"form-control", required: true %><br />
     <!-- or not -->
     <%= f.label :email %>:
     <%= f.text_field :email, class:"form-control", required: true %><br />

     <%= f.label :password %>:
     <%= f.text_field :password_digest, class:"form-control", required: true %><br />

     <%= f.submit "Save User", class:"btn btn-primary" %>
  <% end %>
</div>